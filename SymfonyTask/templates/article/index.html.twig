{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}

{% block body %}
<h1>Articles</h1>
    <form action="{{ path("article.create") }}">
        <button  style="float:right;" class="btn-primary btn"> Create an article </button>
    </form>
    <div style="width:70%" >
    {% for article in aritcles %}
        <div class="card" style="width: 100%;">
            <img class="card-img-top" src="{{ vich_uploader_asset(article, 'imageFile') }}" alt="{{ article.getTitle() }}"  >
            <div class="card-body">
                <h5 class="card-title">{{ article.getTitle() }}</h5>
                <p class="card-text">{{ article.getContent() }}</p>
                <a href="{{ path('article.show',{id:article.getId()}) }}" class="btn btn-primary">See full details</a>
            </div>
        </div>
    {% endfor %}

    </div>
{% endblock %}
